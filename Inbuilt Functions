     }
 } 

34.To reverese a string 
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        System.out.print("Reverse: "+sb.reverse());
        
     }
 }
35.To add a two string using an append key word 
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        sb.append(" love bikes");
        System.out.print(sb);
        
     }
 }
36.To insert  a  string in another string
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        sb.insert(5," love bikes");
        System.out.print(sb);
        
     }
 }
37.To delete in a string one range to another range
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        sb.delete(2,5);
        System.out.print(sb);
        
     }
 }
38.To remove a particular character
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        sb.deleteCharAt(2);
        sb.deleteCharAt(5);
        System.out.print(sb);
        
     }
 }
39.to replace a string
 import java.util.*;
 import java.util.Scanner;
 class achu
 {
     public static void main(String[]args)
     {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter a your name:");
        String Name = sc.nextLine();
        StringBuffer sb = new StringBuffer(Name);
        sb.replace(6,7,"achu");
        sb.deleteCharAt(5);
        System.out.print(sb);
        
     }
 }
